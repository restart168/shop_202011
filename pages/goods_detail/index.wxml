<view class="container">
	<view class="lunbotu">
		<swiper
		 autoplay="{{true}}"
		 indicator-dots="{{true}}"
		 circular="{{true}}"
		>
			<swiper-item
			 class=""
			 item-id=""
			 wx:for="{{goods_detail.pics}}"
			 bindtap="handlePrevewImage"
			 data-url="{{item.pics_big}}"
			>
				<image src="{{item.pics_big}}" mode="widthFix" />

			</swiper-item>
		</swiper>

	</view>
	<view class="goods_price">
		￥{{goods_detail.goods_price}}
	</view>
	<view class="goods_name_row">
		<view class="goods_name">
			{{goods_detail.goods_name}}

		</view>
		<view class="goods_collect">
			<text class=" iconfont icon-shoucang" >



























































</text>
			<view class="collect_text">
				收藏
			</view>

		</view>

	</view>
	<view class="goods_info">
		<view class="goods_info_title">图文详情</view>
		<view class="goods_info_content">
			<rich-text nodes="{{goods_detail.goods_introduce}}"></rich-text>
		</view>
	</view>
	<view class="btm_tool">
		<view class="tool_item">
			<view class="iconfont icon-kefu"></view>
			<view>
				联系客服
			</view>

		</view> 
		<view class="tool_item">
			<view class="iconfont icon-fenxiang"></view>
			<view>
				分享
			</view>

		</view>
		<navigator class="tool_item" bindtap="handleshop" url="/pages/cart/index">
			<view class="iconfont icon-qicheqianlian-"></view>
			<view>
				购物车
			</view>

		</navigator>
		<view class="tool_item btn_cart" bindtap="handleCarAdd">

			加入购物车

		</view>
		<view class="tool_item btn_buy">

			立即购买

		</view>
	</view>
</view>

