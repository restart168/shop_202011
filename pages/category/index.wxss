.search {
  z-index: 999;
}
.container {
  margin-top: 10rpx;
  height: calc(100vh - 100rpx);
}
.leftMenu {
  position: fixed;
  float: left;
  height: 100%;
}
.leftMenu view {
  box-sizing: border-box;
  width: 20vw;
  height: 50rpx;
  padding: 5rpx 0;
  text-align: center;
  margin-top: 10rpx;
  line-height: 50rpx;
}
.righrMenu {
  width: 80vw;
  float: right;
  height: 100%;
}
.righrMenu .title {
  width: 100%;
  margin-top: 10rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: large;
}
.righrMenu .good_list {
  display: flex;
  flex-wrap: wrap;
}
.righrMenu .good_list .children {
  width: 33.33%;
  text-align: center;
}
.righrMenu .good_list .children image {
  width: 100%;
}
.active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
