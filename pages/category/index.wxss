page {
  background-color: #f2f2f2;
}
.search {
  z-index: 999;
}
.container {
  margin-top: 10rpx;
  height: calc(100vh - 100rpx);
  display: flex;
}
.leftMenu {
  flex: 2;
}
.leftMenu view {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.righrMenu {
  flex: 7;
  margin: 0 20rpx;
}
.righrMenu .block {
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.righrMenu .block .title {
  width: 100%;
  margin-top: 10rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-weight: 600;
  font-size: 34rpx;
}
.righrMenu .block .good_list {
  display: flex;
  flex-wrap: wrap;
}
.righrMenu .block .good_list .children {
  width: 33.33%;
  text-align: center;
  padding: 0 15rpx;
}
.righrMenu .block .good_list .children image {
  width: 100%;
}
.active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
  font-size: 32rpx;
}
